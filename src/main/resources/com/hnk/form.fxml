<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hnk.FormController" stylesheets="@style.css" styleClass="main-container">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="CONTACT HNK" styleClass="title-label"/>

    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" promptText="Votre nom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" promptText="exemple@hnk.com" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Message:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextArea fx:id="messageArea" prefRowCount="3" promptText="Votre message..." GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button text="Envoyer" onAction="#handleSubmit" styleClass="submit-button"/>
    <Label fx:id="statusLabel" styleClass="status-text"/>
</VBox>