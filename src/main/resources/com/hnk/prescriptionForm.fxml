<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hnk.PrescriptionController"
      spacing="15">

    <Label text="Prescription Médicale" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- ComboBox pour sélectionner la consultation en cours -->
    <HBox spacing="10">
        <Label text="Consultation :"/>
        <ComboBox fx:id="comboConsultations" promptText="Sélectionner une consultation" prefWidth="300"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="txtNomMedicament" promptText="Nom du médicament"/>
        <TextField fx:id="txtPosologie" promptText="Posologie"/>
        <TextField fx:id="txtDuree" promptText="Durée (jours)"/>
        <Button text="Ajouter" onAction="#handleAjouterMedicament"/>
    </HBox>

    <TableView fx:id="tableMedicaments" prefHeight="200">
        <columns>
            <TableColumn text="Nom" fx:id="colNom"/>
            <TableColumn text="Posologie" fx:id="colPosologie"/>
            <TableColumn text="Durée" fx:id="colDuree"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Générer PDF" onAction="#handleGenererPDF"/>
        <Button text="Imprimer" onAction="#handleImprimerOrdonnance"/>
    </HBox>

</VBox>
